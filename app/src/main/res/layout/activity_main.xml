<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/ekran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="15dp"
        android:text="0"
        android:textColor="#000"
        android:textSize="30sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="180dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">



            <Button
                android:backgroundTint="@color/black"
                android:textColor="#82F40A"
                android:id="@+id/btn_ac"
                android:text="AC"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />

            <Button
                android:backgroundTint="#000"
                android:textColor="#82F40A"
                android:id="@+id/btn_delete"
                android:text="del"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />
            <Button
                android:backgroundTint="#000"
                android:textColor="#82F40A"
                android:id="@+id/btn_bolish"
                android:text="/"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:backgroundTint="#000"
                android:textColor="#82F40A"
                android:id="@+id/btn_7"
                android:text="7"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />
            <Button
                android:backgroundTint="#000"
                android:textColor="#82F40A"
                android:id="@+id/btn_8"
                android:textSize="30sp"
                android:text="8"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_margin="3dp" />

            <Button
                android:backgroundTint="#000"
                android:textColor="#82F40A"
                android:id="@+id/btn_9"
                android:text="9"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />
            <Button
                android:backgroundTint="#000"
                android:textColor="#82F40A"
                android:id="@+id/kopaytirish"
                android:text="*"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_margin="3dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:backgroundTint="#000"
                android:textColor="#82F40A"
                android:id="@+id/btn_4"
                android:text="4"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />
            <Button
                android:backgroundTint="#000"
                android:textColor="#82F40A"
                android:id="@+id/btn_5"
                android:text="5"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />
            <Button
                android:backgroundTint="#000"
                android:textColor="#82F40A"
                android:id="@+id/btn_6"
                android:textSize="30sp"
                android:text="6"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />
            <Button
                android:backgroundTint="#000"
                android:textColor="#82F40A"
                android:id="@+id/minus"
                android:text="-"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:backgroundTint="#000"
                android:textColor="#82F40A"
                android:id="@+id/btn_1"
                android:textSize="30sp"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_margin="3dp"
                android:layout_weight="1" />

            <Button
                android:backgroundTint="#000"
                android:textColor="#82F40A"
                android:id="@+id/btn_2"
                android:text="2"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />
            <Button
                android:backgroundTint="#000"
                android:textColor="#82F40A"
                android:id="@+id/btn_3"
                android:textSize="30sp"
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />
            <Button
                android:backgroundTint="#000"
                android:textColor="#82F40A"
                android:id="@+id/plus"
                android:text="+"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:backgroundTint="#000"
                android:textColor="#82F40A"
                android:id="@+id/btn_0"
                android:text="0"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />

            <Button
                android:backgroundTint="#000"
                android:textColor="#82F40A"
                android:id="@+id/btn_nuqta"
                android:text="."
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />
            <Button
                android:backgroundTint="#000"
                android:textColor="#82F40A"
                android:id="@+id/teng"
                android:text="="
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                />

        </LinearLayout>



    </LinearLayout>


</LinearLayout>